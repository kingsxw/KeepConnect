{
  "name": "keepconnect",
  "version": "1.0.0",
  "description": "VPN connection keeper for Sangfor EasyConnect",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:x64": "electron-builder --mac --x64",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:win": "electron-builder --win",
    "build:win:x64": "electron-builder --win --x64",
    "build:win:x86": "electron-builder --win --ia32",
    "build:win:x64:portable": "electron-builder --win --x64 --target portable",
    "build:win:x86:portable": "electron-builder --win --ia32 --target portable",
    "build:linux": "electron-builder --linux",
    "build:linux:x64": "electron-builder --linux --x64",
    "build:linux:ia32": "electron-builder --linux --ia32",
    "build:linux:arm64": "electron-builder --linux --arm64",
    "build:linux:armv7l": "electron-builder --linux --armv7l"
  },
  "keywords": [
    "vpn",
    "easyconnect",
    "sangfor"
  ],
  "author": {
    "name": "kingsxw",
    "email": "kingsxw@example.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.keepconnect.app",
    "productName": "KeepConnect",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon-1024x1024.png",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "icon-256x256.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "category": "Network",
      "icon": "icon-256x256.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "icon-256x256.png",
      "icon-16x16.png",
      "icon-1024x1024.png"
    ]
  }
}